<Page x:Class="Fresh.Desktop.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fresh.Desktop.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1.3*" />
            <RowDefinition Height="8.2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#3AA9AD"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            
        </Grid>
        <DataGrid Grid.Row="2" Background="White" x:Name="ProductsDgUi" AutoGenerateColumns="False" IsReadOnly="True"
                  RenderTransformOrigin="0.5,0.5" Margin="0,0,0,3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="0.3*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Full_Name}" Width="0.8*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Email}" Width="0.8*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Phone_Number}" Width="0.8*"/>
                <DataGridTextColumn Header="Available" Binding="{Binding Phone_Number}" Width="0.5*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnUpdate" 
                    Grid.Column="1"
                    Style="{DynamicResource btnUpdate}" 
                    Height="32"
                    Width="110"
                    HorizontalAlignment="Left">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Height="32" Width="85" RenderTransformOrigin="-0.61,0.512">
                    <Path Data="{DynamicResource Update}" Margin="0 0 0 0" Stretch="Fill"
                          Fill="{DynamicResource Colors}" 
                          Width="22" Height="18"/>
                    <TextBlock Text=" Update" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

            </Button>
            <Button x:Name="btnDelete" 
                    Grid.Column="2"
                    Style="{DynamicResource btnDelete}" 
                    Height="33"
                    Width="110"
                    HorizontalAlignment="Left">
                <StackPanel Grid.Column="2" Orientation="Horizontal" Height="32" Width="85" RenderTransformOrigin="-0.61,0.512">
                    <Path Data="{DynamicResource Delete}" Margin="0 0 0 0" Stretch="Fill"
                          Fill="{DynamicResource Color}" 
                          Width="22" Height="18"/>
                    <TextBlock Text=" Delete" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Grid Grid.Column="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.6*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="14" Foreground="{DynamicResource TextSecundaryColor}" VerticalAlignment="Center" HorizontalAlignment="Right" >
                        Add Product
                    </TextBlock>
                    <Button x:Name="btnAddUser" 
                    Grid.Column="1"
                    Style="{DynamicResource buttonCircle}" 
                    Height="45"
                    Width="45" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Height="21" Width="22">
                            <Path Data="{DynamicResource AddProduct}" Margin="0 0 0 0" Stretch="Fill" Fill="{DynamicResource SecundaryBackgroundColor}" 
                          Width="22" Height="18"/>

                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</Page>

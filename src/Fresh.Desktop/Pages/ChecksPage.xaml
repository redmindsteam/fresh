<Page x:Class="Fresh.Desktop.Pages.ChecksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fresh.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChecksPage">

    <Grid Background="{DynamicResource PrimaryBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource SecundaryBackgroundColor}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="0.8*" />
                    <ColumnDefinition  Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Select a date: " Style="{DynamicResource labelChecksPage}"/>
                <DatePicker Grid.Column="1" Style="{DynamicResource StatisticsDatePicker}"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="0.8*" />
                    <ColumnDefinition  Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Select the cashier: " Style="{DynamicResource labelChecksPage}"/>
                <ComboBox Grid.Column="1" Name="comboBoxCashiers" Loaded="comboBoxCashiers_Loaded" Height="30" Width="200"/>

            </Grid>
            
        </Grid>
        <DataGrid Grid.Row="2" Background="White" x:Name="ProductsDgUi" AutoGenerateColumns="False" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Income" Binding="{Binding Income}" Width="*"/>
                <DataGridTextColumn Header="Expenditure" Binding="{Binding Expenditure}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>

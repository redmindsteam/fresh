<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#f3f3f3"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#3AA9AD" />
    <SolidColorBrush x:Key="Color" Color="#371B58" />
    <SolidColorBrush x:Key="Colors" Color="#0AA1DD" /> 


    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#f3f3f3"/>
    <SolidColorBrush x:Key="PrimaryGrayColor" Color="#f3f3f3"/>
    
    <!-- Secundary Colors -->
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#CEE8FB"/>
    <SolidColorBrush x:Key="SecundaryGrayColor" Color="#3AA9AD"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#020F16"/>
    <SolidColorBrush x:Key="TextSecundaryColor" Color="#434344"/>

    <!-- Icons Colors -->
    <SolidColorBrush x:Key="ActionIconColor" Color="#434344"/>
    
    <!-- Statistics Page Colours-->
    <SolidColorBrush x:Key="clrExpenditure" Color="#F06292" />
    <SolidColorBrush x:Key="clrIncome" Color="#ADE792" />

</ResourceDictionary>